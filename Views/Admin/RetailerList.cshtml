
@using System.Data
@model DataTable

@{
    Layout = "~/Views/_formlayout.cshtml";
    // ViewBag.Title = "FarmerList";
}


<div class="x_title">
    <h2>RETAILER LIST </h2>

    <div class="clearfix"></div>
</div>

<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/RetailerList" method="post" enctype="multipart/form-data" style="width:auto">


    <table id="datatable" class="table table-striped table-bordered" border="1" style="border-color:lightgrey;">
        <thead>
            <tr>
                <th>RetailerID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Password</th>
                <th>Address</th>
                <th>City</th>
             
                <th>Email</th>
                <th>Phone</th>
                <th>CompanyName</th>

              
                <th></th>
            </tr>  

        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i]["RetailerID"]</td>
                    <td>@Model.Rows[i]["Name"]</td>
                    <td>@Model.Rows[i]["Username"]</td>
                    <td>@Model.Rows[i]["Password"]</td>
                    <td>@Model.Rows[i]["Address"]</td>
                    <td>@Model.Rows[i]["City"]</td>
                  
                    <td>@Model.Rows[i]["Email"]</td>
                    <td>@Model.Rows[i]["Phone"]</td>
                    <td>@Model.Rows[i]["CompanyName"]</td>

                  


                    <td>
                        <a style="color:red" href="RetailerDelete/@Model.Rows[i]["RetailerID"]">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>