
@using System.Data
@model DataTable

@{
    Layout = "~/Views/_formlayout.cshtml";
    //  ViewBag.Title = "DistrictList";
}


<div class="x_title">
    <h2>DISTRICT LIST </h2>

    <div class="clearfix"></div>
</div>

<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/DistrictList" method="post" enctype="multipart/form-data">


    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>DistrictID</th>
                <th>Name</th>
                <th>StateName</th>
                <th>CountryName</th>


                <td></td>
                <td></td>

            </tr>
            </thead>

        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i]["DistrictID"]</td>
                    <td>@Model.Rows[i]["Name"]</td>
                    <td>@Model.Rows[i]["StateName"]</td>
                    <td>@Model.Rows[i]["CountryName"]</td>


                    <td>
                        <a style="color:red" href="DistrictEdit/@Model.Rows[i]["DistrictID"]">Edit</a>
                    </td>
                    <td>
                        <a style="color:red" href="DistrictDelete/@Model.Rows[i]["DistrictID"]">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</form>


