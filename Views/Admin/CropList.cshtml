@using System.Data
@model DataTable

@{
    Layout = "~/Views/_formlayout.cshtml";
   // ViewBag.Title = "CropList";
}


<div class="x_title">
    <h2>CROP LIST </h2>

    <div class="clearfix"></div>
</div>

<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/CropList" method="post" enctype="multipart/form-data">


    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>CropID</th>
                <th>Name</th>
                <th>Photo</th>
                <th>CropType</th>
             
                <th>Season</th>
                <th>SoilType</th>
                <td></td>
                <td></td>

            </tr>
            </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i]["CropID"]</td>
                    <td>@Model.Rows[i]["Name"]</td>
                    <td>@Model.Rows[i]["Photo"]</td>

                    <td>@Model.Rows[i]["CropTypeID"]</td>
                
                    <td>@Model.Rows[i]["Season"]</td>
                    <td>@Model.Rows[i]["SoilType"]</td>

                    <td>
                        <a style="color:red" href="CropEdit/@Model.Rows[i]["CropID"]">Edit</a>
                    </td>
                    <td>
                        <a style="color:red" href="CropDelete/@Model.Rows[i]["CropID"]">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
    </table>
</form>