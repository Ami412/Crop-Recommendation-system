@using System.Data
@model DataTable

@{
    Layout = "~/Views/_formlayout.cshtml";
    // ViewBag.Title = "croptypelist";
}



<div class="x_title">
    <h2>CROP TYPE LIST </h2>

    <div class="clearfix"></div>
</div>

<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/CropTypeList" method="post" enctype="multipart/form-data">


    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>CropTypeID</th>
                <th>Name</th>
                <th>Photo</th>
                <td></td>
                <td></td>

            </tr>
            </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i]["CropTypeID"]</td>
                    <td>@Model.Rows[i]["Name"]</td>
                    <td>@Model.Rows[i]["Photo"]</td>
                    <td>
                        <a style="color:red" href="CropTypeEdit/@Model.Rows[i]["CropTypeID"]">Edit</a>
                    </td>
                    <td>
                        <a style="color:red" href="CropTypeDelete/@Model.Rows[i]["CropTypeID"]">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
    </table>







</form>

