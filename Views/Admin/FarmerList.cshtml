@using System.Data
@model DataTable

@{
    Layout = "~/Views/_formlayout.cshtml";
    // ViewBag.Title = "FarmerList";
}


<div class="x_title">
    <h2>FARMER LIST </h2>

    <div class="clearfix"></div>
</div>

<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Admin/FarmerList" method="post" enctype="multipart/form-data">


    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>FarmerID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Password</th>
               
                <th>City</th>
          
                <th>Email</th>
                <th>Phone</th>
                <th>SoilType</th>
                <th>LandQty</th>

                <td></td>


            </tr>
            </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>@Model.Rows[i]["FarmerID"]</td>
                    <td>@Model.Rows[i]["Name"]</td>
                    <td>@Model.Rows[i]["Username"]</td>
                    <td>@Model.Rows[i]["Password"]</td>
                   
                    <td>@Model.Rows[i]["City"]</td>
                 
                    <td>@Model.Rows[i]["Email"]</td>
                    <td>@Model.Rows[i]["Phone"]</td>
                    <td>@Model.Rows[i]["SoilType"]</td>
                    <td>@Model.Rows[i]["LandQty"]</td>


                    <td>
                        <a style="color:red" href="FarmerDelete/@Model.Rows[i]["FarmerID"]">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>