@using myproject.Models
@using System.Data
@model DataTable
@{
    Layout = "~/Views/_MasterLayout.cshtml";
    // ViewBag.Title = "PacketList";
  
    Retailer f = (Retailer)Session["Retailer"];
}



<div id="maincontainer">
    <section id="product">
        <div class="container">
            <!--  breadcrumb -->
           
            <h1 class="heading1"><span class="maintext"> PACKET LIST</span><span class="subtext"> List of packets inserted by you</span></h1>
            <!-- Cart-->
            <div class="cart-info">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th class="name">Title</th>
                        <th class="image">Photo</th>
                        <th class="price">Price</th>
                        <th class="model">Description</th>
                        <th class="quantity">CropID</th>
                       
                        <th class="total">Packet Size</th>
                        <th class="total"></th>

                    </tr>
                @for (int i = 0; i < Model.Rows.Count; i++)
                {
                    <tr>
                        <td class="name"><a href="#">@Model.Rows[i]["Title"]</a></td>
                        <td class="image"><a href="#"><img title="product" alt="product" src="@Model.Rows[i]["Photo"]" height="50" width="50"></a></td>
                        <td class="price">₹ @Model.Rows[i]["Price"].00</td>
                        <td class="model">@Model.Rows[i]["Description"]</td>
                        
                        <td class="total">@Model.Rows[i]["CropID"]</td>
                     
                         <td class="total">@Model.Rows[i]["PacketSize"] gm</td>

                       
                       

                        <td class="total">
                            <a href="PacketEdit/@Model.Rows[i]["PacketID"]"><img class="tooltip-test" data-original-title="Update" src="~/UserSide/img/update.png" alt=""></a>
                            <a href="PacketDelete/@Model.Rows[i]["PacketID"]"><img class="tooltip-test" data-original-title="Remove" src="~/UserSide/img/remove.png" alt=""></a>
                        </td>

                    </tr>
                }
                   


                </table>
            </div>
           
          
        </div>
    </section>
</div>




