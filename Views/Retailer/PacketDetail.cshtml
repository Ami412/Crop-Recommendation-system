@model myproject.Models.Packet
@using System.Data


@{
    DataTable dtC = ViewBag.dtC;
    DataTable dtR= ViewBag.dtR;


    Layout = "~/Views/_formlayout.cshtml";
    // ViewBag.Title = "PacketDetail";
}

<div class="x_title">
    <h2>PACKET DETAILS </h2>

    <div class="clearfix"></div>
</div>
<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="/Retailer/PacketInsert" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
            TITLE:
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="text" id="name" required="required" name="Title" class="form-control col-md-7 col-xs-12">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fileupload">
            PHOTO:
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="file" name="Photo" value="fileupload"
                   id="fileupload" class="form-control col-md-7 col-xs-12" required="required">

        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
            PRICE:
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input type="text" id="name" required="required" name="Price" class="form-control col-md-7 col-xs-12">
        </div>
    </div>


    <div class="form-group">
        <label for="details" class="control-label col-md-3 col-sm-3 col-xs-12">DESCRIPTION:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input id="details" class="form-control col-md-7 col-sxs-12" type="text" name="Description" required="required">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12"> RETAILER:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div id="Retailer" data-toggle="buttons"  class="form-control col-md-7 col-sxs-12">
                @Html.DropDownList("RetailerID", new SelectList(dtR.DefaultView, "RetailerID", "Name")) 
            </div>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">CROP:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div id="Crop" data-toggle="buttons" class="form-control col-md-7 col-sxs-12">
              @Html.DropDownList("CropID", new SelectList(dtC.DefaultView, "CropID", "Name"))
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="details" class="control-label col-md-3 col-sm-3 col-xs-12">PACKET SIZE:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input id="details" class="form-control col-md-7 col-sxs-12" type="text" name="PacketSize" required="required">
        </div>
    </div>

    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-primary">Cancel</button>
            <button type="submit" id="button1" class="btn btn-success">Submit</button>
        </div>
    </div>


</form>


